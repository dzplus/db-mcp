# MySQL 数据库配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=your_database
MYSQL_USER=your_user
MYSQL_PASSWORD=your_password

# 连接池配置
POOL_SIZE=10
POOL_MIN_SIZE=1
POOL_MAX_SIZE=20
CONNECT_TIMEOUT=30

# 服务器配置
# 传输模式: stdio, http (默认), sse
SERVER_TRANSPORT=http
# HTTP/SSE 服务器绑定地址
SERVER_HOST=0.0.0.0
# HTTP/SSE 服务器端口
SERVER_PORT=8000

# 性能配置
# 元数据缓存更新间隔（分钟）
CACHE_UPDATE_INTERVAL=5
# 查询结果最大行数
MAX_RESULT_ROWS=1000
# 查询超时时间（秒）
QUERY_TIMEOUT=60

# 血缘分析配置
# 是否启用血缘分析
LINEAGE_ENABLED=true
# 血缘数据存储目录
LINEAGE_STORAGE_DIR=.cache/lineage
# SQL 方言 (mysql, ansi, hive, sparksql)
LINEAGE_DIALECT=mysql
# 是否分析 SELECT 语句（默认只分析写入语句）
LINEAGE_ANALYZE_SELECT=false

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=mysql_mcp_server.log
